# Environment Configuration Example
# Copy this file to .env.development or .env.production and fill in your values

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Database Configuration
# For development with Neon Local (Docker Compose)
DATABASE_URL=postgres://neondb_owner:password@neon-local:5432/neondb
# For production with Neon Cloud
# DATABASE_URL=postgres://username:password@ep-xyz.region.neon.tech/dbname?sslmode=require

# Neon Configuration (for Neon Local in development)
NEON_API_KEY=your_neon_api_key_here
NEON_PROJECT_ID=your_neon_project_id_here
PARENT_BRANCH_ID=main

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
ARKJET_KEY=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
